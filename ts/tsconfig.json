{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],

    /* Modules */
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",

    // /* Type Checking */
    "strict": true,
    "noImplicitAny": true
  },
  //   "include": ["**/src/*.ts"],
  "exclude": ["node_modules"]
}
